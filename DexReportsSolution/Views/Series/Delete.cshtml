@model DexReportsSolution.Models.SensorSeries
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" id="delete-series-form">
        <div class="modal fade" id="delete-series-modal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3>Вы действительно хотите удалить график?</h3>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.HiddenFor(model => model.Id)
                                @Html.DisplayFor(model => model.Label)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Удалить" class="btn btn-danger" formaction="Delete" formmethod="post" />
                                <button type="button" class="btn btn-default" data-dismiss="modal">Отменить</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}